<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">
        <!-- エラーメッセージを表示するためのHTMLを貼り付けてください -->
        <% @teacher.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        
        <%= form_tag("/teachers/create") do %>
          <p>ユーザー名</p>
          <!-- value属性を用いて、初期値を設定してください -->
          <input name="name" value="<%= @teacher.name %>">
          <p>メールアドレス</p>
          <!-- value属性を用いて、初期値を設定してください -->
          <input name="email" value="<%= @teacher.email %>">
          <p>パスワード</p>
          <!-- パスワード用のフォームを追加してください -->
          <input type="password" name="password" value="<%= @teacher.password %>">
          <input type="submit" value="新規登録">
        <% end %>
      </div>
    </div>
  </div>
</div>